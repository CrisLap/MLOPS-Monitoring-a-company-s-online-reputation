FROM python:3.10-slim

WORKDIR /app

COPY requirements.txt ./requirements.txt
COPY requirements-dev.txt ./requirements-dev.txt
RUN pip install --upgrade pip && pip install -r requirements.txt -r requirements-dev.txt \
    && pip install fasttext huggingface_hub

COPY training ./training
COPY data_drift_detection ./data_drift_detection

WORKDIR /app/training

# Default entrypoint for training
ENTRYPOINT ["python", "-m", "training.train"]


